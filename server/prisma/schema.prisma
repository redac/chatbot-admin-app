generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Bot {
  bot_id    Int      @id @default(autoincrement())
  name      String   @default("Steve")
  brain     String   @default("rs-standard")
  web       Boolean  @default(true)
  discord   Boolean  @default(false)
  createdAt DateTime @default(now())
}

// In order to identify a user we need to use somethig like discord where we add a tag of 4 digits
// To the end of username. For example redac#2342
model Store {
  username    String
  tag         Int
  preferences String // Stringified JSON object
  @@unique([username, tag])
}
